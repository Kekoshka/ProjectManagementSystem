<UserControl x:Class="projectManagmentSystem.Pages.MyTasks.Elements.MyTask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectManagmentSystem.Pages.MyTasks.Elements"
             mc:Ignorable="d">
    <Border MinWidth="100" MaxWidth="300" Background="White" MouseUp="OpenTask" CornerRadius="10">
        <StackPanel Margin="10">
            <TextBlock x:Name="Name" Text="Название задачи" VerticalAlignment="Top" FontSize="16" HorizontalAlignment="Left"/>
            <TextBlock x:Name="Owner" Text="Описание задачи" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        </StackPanel>
    </Border>
</UserControl>
