<Page x:Class="projectManagmentSystem.Pages.Subtask.Subtask"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projectManagmentSystem.Pages.Subtask"
      mc:Ignorable="d"
      Title="Subtask">

    <Grid>
        <Grid Background="Black" Opacity="0.2" MouseUp="CloseFrame"/>
        <Border VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" CornerRadius="10" MinWidth="500" MaxWidth="1000">
            <StackPanel>
                <Label Content="Название" FontSize="16" FontWeight="Medium"/>
                <TextBlock x:Name="Name" Height="auto" Margin="10,0,10,0"/>
                <Label Content="Описание" FontSize="16" FontWeight="Medium"/>
                <TextBlock x:Name="Description" Height="auto" Margin="10,0,10,0"/>
                <Label Content="Ответственный" FontSize="16" FontWeight="Medium"/>
                <StackPanel x:Name="ResponsibleParent" Margin="10,0,10,10" Height="30"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
