<Page x:Class="projectManagmentSystem.Pages.Subtask.SaveSubtask"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projectManagmentSystem.Pages.Subtask"
      mc:Ignorable="d"
      Title="SaveSubtask">

    
    <Grid>
        <Grid Background="Black" Opacity="0.2" MouseUp="OpenTask"/>
        <Border VerticalAlignment="Center" HorizontalAlignment="Center"  MinWidth="500" MaxWidth="1000" CornerRadius="10" Background="White">
                <StackPanel>
                    <Label Content="Название" FontSize="16" FontWeight="Medium"/>
                    <TextBox x:Name="Name" Height="30" Margin="10,0,10,0"/>
                    <Label Content="Описание" FontSize="16" FontWeight="Medium"/>
                    <TextBox x:Name="Description" Height="100" Margin="10,0,10,0"/>
                    <Label Content="Ответственные" FontSize="16" FontWeight="Medium"/>
                    <ComboBox x:Name="ResponsibleParent" Margin="10,0,10,10" Height="30"/>
                </StackPanel>
        </Border>
    </Grid>
</Page>
