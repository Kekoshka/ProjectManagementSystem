<UserControl x:Class="projectManagmentSystem.Pages.CanbanSubtask.Elements.Subtask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectManagmentSystem.Pages.CanbanSubtask.Elements"
             mc:Ignorable="d">
    <Border Margin="10,5,10,5" Width="230" MinHeight="50" Background="White" CornerRadius="10" MouseUp="OpenSubtask">
        <StackPanel>
            <TextBlock x:Name="SubtaskName" TextWrapping="Wrap" Text="Название задачи" FontSize="16" FontWeight="Medium" Margin="10,10,10,5"/>
            <TextBlock x:Name="Charge" Text="Ответственный: не назначен" TextWrapping="Wrap" Margin="10,0,10,0"/>
            <TextBlock x:Name="Description" Text="Описание подзадачи" TextWrapping="Wrap" FontSize="14" Margin="10,5,10,10"/>
            <Grid>
                <Button x:Name="Ed" Click="Edit" Height="20" Width="20" Background="Transparent" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,30,0">
                    <Image Source="/Images/Edit.png"/>
                </Button>
                <Button x:Name="Del" Click="Delete" Height="20" Width="20" Background="Transparent" BorderThickness="0" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,5,5,0">
                    <Image Source="/Images/Remove.png"/>
                </Button>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>
