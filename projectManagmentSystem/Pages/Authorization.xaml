<Page x:Class="projectManagmentSystem.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projectManagmentSystem.Pages"
      xmlns:element="clr-namespace:projectManagmentSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid Background="White">
        <StackPanel Margin="250,0,250,0" MinWidth="300" MaxWidth="500" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Авторизация" FontSize="20" HorizontalContentAlignment="Center" FontWeight="Medium"/>
            <Label Content="Почта" HorizontalAlignment="Center" FontSize="14" FontWeight="Medium" Margin="0,50,0,0"/>
            <TextBox x:Name="Post" Height="30" Margin="50,0,50,0"/>
            <Label Content="Пароль" HorizontalAlignment="Center" FontSize="14" FontWeight="Medium"/>
            <PasswordBox x:Name="Password" Height="30" Margin="50,0,50,0"/>
            <Button Click="Auth" Height="30" Content="Войти" Margin="50,25,50,0"/>
            <Button Click="OpenRegistration" Background="Transparent" Content="Зарегистрироваться" Width="120" Margin="0,10,0,0" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Page>
