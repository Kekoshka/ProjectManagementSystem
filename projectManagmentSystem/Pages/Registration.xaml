<Page x:Class="projectManagmentSystem.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projectManagmentSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registration">

    <Grid Background="White">
        <StackPanel Margin="250,0,250,0" MaxWidth="500" MinWidth="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Регистрация" FontSize="20" FontWeight="Medium" HorizontalContentAlignment="Center"/>

            <Label Content="Фамилия" HorizontalAlignment="Center" FontSize="14" FontWeight="Medium"/>
            <TextBox x:Name="Surname"  Height="30" Margin="50,0,50,0"/>
            <Label Content="Имя" HorizontalAlignment="Center" FontSize="14" FontWeight="Medium"/>
            <TextBox x:Name="Name"  Height="30" Margin="50,0,50,0"/>
            <Label Content="Отчество" HorizontalAlignment="Center" FontSize="14" FontWeight="Medium"/>
            <TextBox x:Name="Patronymic" Height="30" Margin="50,0,50,0"/>

            <Label Content="Почта" HorizontalAlignment="Center" FontSize="14" FontWeight="Medium"/>
            <TextBox x:Name="Mail" Height="30" Margin="50,0,50,0"/>
            <Label Content="Пароль" HorizontalAlignment="Center" FontSize="14" FontWeight="Medium"/>
            <PasswordBox x:Name="Password" Height="30" Margin="50,0,50,0"/>
            <Button Click="Reg" Height="30" Content="Зарегистрироваться" Margin="50,25,50,0"/>
            <Button Click="OpenAuthorization" Background="Transparent" Content="Уже есть аккаунт?" Width="120" Margin="0,10,0,0" BorderThickness="0"/>
                
        </StackPanel>
    </Grid>
</Page>
