        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Hidden" Margin="0,50,0,0">
            <StackPanel x:Name="ColumnsParent" Margin="10,10,0,10" />
        </ScrollViewer>
    </Grid>
