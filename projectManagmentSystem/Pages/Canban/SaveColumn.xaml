<Page x:Class="projectManagmentSystem.Pages.Canban.SaveColumn"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projectManagmentSystem.Pages.Canban"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SaveColumn">

    <Grid>
        <Grid Background="Black" Opacity="0.2" MouseUp="SaveAndCloseFrame"/>
        <Border CornerRadius="10" VerticalAlignment="Center" HorizontalAlignment="Center" Background="White" MinWidth="500" MaxWidth="1000">
                <Grid>
                    <Label Content="Название"  FontSize="16" Margin="0,5,0,0" FontWeight="Medium"/>
                        <Button Click="SaveAndCloseFrame" Height="20" Width="20" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Background="Transparent" BorderThickness="0">
                        <Image Source="/Images/Cancel.png"/>
                    </Button>
                <TextBox x:Name="Name" Height="auto" MaxHeight="50" Margin="10,40,10,10"/>

            </Grid>
                
        </Border>
    </Grid>
</Page>
