<UserControl x:Class="projectManagmentSystem.Pages.Task.Elements.Subtask"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectManagmentSystem.Pages.Task.Elements"
             mc:Ignorable="d">
    <StackPanel Orientation="Horizontal" MouseUp="OpenSubtask">
        <Label x:Name="Name" Content="Название подзадачи" HorizontalAlignment="Left"/>
        <Button Click="DeleteSubtask" Height="30" Width="30" Background="Transparent" BorderThickness="0" Padding="7">
            <Image Source="/Images/Remove.png"/>
        </Button>
    </StackPanel>
</UserControl>
