<Page x:Class="projectManagmentSystem.Pages.Projects.ListProjects"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:projectManagmentSystem.Pages.Projects"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListProjects">

    <Grid Background="WhiteSmoke">
        <Grid Height="50" VerticalAlignment="Top">
            <Label Content="Проекты" FontSize="24" Margin="10,0,0,0" FontWeight="Bold" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <Button Click="CreateProject" Height="30" Width="100" Content="Создать проект" VerticalAlignment="Top" BorderThickness="0" HorizontalAlignment="Right" Margin="10" Foreground="White" Background="#2752ec"/>
        </Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,50,0,0">
            <WrapPanel x:Name="ProjectsParent"/>
        </ScrollViewer>
    </Grid>
</Page>
