<UserControl x:Class="projectManagmentSystem.Pages.Projects.Elements.Project"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectManagmentSystem.Pages.Projects.Elements"
             mc:Ignorable="d">
    <Border MinWidth="100" MaxWidth="300" Height="50" Background="White" MouseUp="OpenProjectCanban" CornerRadius="10">
        <Grid>
            <Label x:Name="Name" Content="Название проекта" VerticalAlignment="Top" HorizontalAlignment="Left"/>
            <Label x:Name="Owner" Content="Владелец: Фамилия Имя" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        </Grid>
    </Border>
</UserControl>
