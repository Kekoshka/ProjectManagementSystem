<UserControl x:Class="projectManagmentSystem.Pages.Project.Elements.UserEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:projectManagmentSystem.Pages.Project.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Margin="2">
        <Border Height="30" Width="30" CornerRadius="50">
            <Border.Background>
                <ImageBrush x:Name="Photo" ImageSource="/Images/UserImg.jpg"/>
            </Border.Background>
        </Border>
        <Label x:Name="Name" Content="Фамилия Имя Отчество" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
        <ComboBox x:Name="RolesParent" SelectionChanged="EditUserRole" Height="20" Width="100" BorderThickness="0" Margin="0,0,10,0" HorizontalAlignment="Right"/>
    </StackPanel>
</UserControl>
